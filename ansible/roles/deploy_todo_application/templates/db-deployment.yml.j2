apiVersion: v1
kind: Service
metadata:
  name: mongodb-service
  labels:
    name: mongo
  namespace: todo
spec:
  type: ClusterIP # ClusterIP means: No external access (from internet) to this Service
  clusterIP: None
  ports:
  - port: 27017
    targetPort: 27017
  selector:
    role: mongo
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: mongod
  namespace: todo
spec:
  serviceName: mongodb-service
  replicas: 1
  selector: 
    matchLabels:
      role: mongo
  template:
    metadata:
      labels:
        role: mongo
        environment: test
        replicaset: MainRepSet
    spec:
      containers:
      - name: mongod-container
        image: {{ mongo_image }}
        resources:
          requests:
            cpu: 0.2
            memory: 200Mi
        ports:
          - containerPort: 27017
        volumeMounts:
          - name: mongodb-persistent-storage-claim
            mountPath: /data/db
  volumeClaimTemplates:
  - metadata:
      name: mongodb-persistent-storage-claim
      annotations:
        volume.beta.kubernetes.io/storage-class: "standard"
    spec:
      accessModes: [ "ReadWriteOnce" ]
      resources:
        requests:
          storage: 500Mi